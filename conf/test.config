/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run ebi-metagenomics/miassembler -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

profiles {
    // Limit resources so that this can run on GitHub Actions
    test {
        params {
            max_cpus   = 2
            max_memory = '6.GB'
            max_time   = '6.h'

            study_accession                  = "SRP115494"
            reads_accession                  = "SRR6180434"
            bwamem2_reference_genomes_folder = "tests/human_phix/bwa2mem"
            blast_reference_genomes_folder   = "tests/human_phix/blast"
            human_phix_blast_index_name      = "human_phix"
            human_phix_bwamem2_index_name    = "human_phix"
        }
    }
    test_metat {
        params {
            max_cpus   = 2
            max_memory = '6.GB'
            max_time   = '6.h'

            study_accession                  = "SRP037995"
            reads_accession                  = "SRR1193177"
            bwamem2_reference_genomes_folder = "tests/human_phix/bwa2mem"
            blast_reference_genomes_folder   = "tests/human_phix/blast"
            human_phix_blast_index_name      = "human_phix"
            human_phix_bwamem2_index_name    = "human_phix"
        }
    }
    test_metat_single {
        params {
            max_cpus   = 2
            max_memory = '6.GB'
            max_time   = '6.h'

            study_accession                  = "SRP037995"
            reads_accession                  = "SRR4830181"
            bwamem2_reference_genomes_folder = "tests/human_phix/bwa2mem"
            blast_reference_genomes_folder   = "tests/human_phix/blast"
            human_phix_blast_index_name      = "human_phix"
            human_phix_bwamem2_index_name    = "human_phix"
        }
    }
}


